@inherits ConfirmDialogBase


@if (ShowDialog)
{
    <div class="modal fade show d-block" id="exampleModal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="titleLabel"><p class="font-weight-bold">@Title</p></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="@Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h5><i class="fa fa-question-circle" aria-hidden="true"></i>&nbsp;@Message</h5>
                    <hr />
                    <div class="col-lg-4 form-group float-lg-right">
                        <button @onclick="@Confirm" class="btn btn-primary">Yes</button>
                        <a @onclick="@Close" class="btn btn-danger">No</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}